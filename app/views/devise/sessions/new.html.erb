  <style>
    body::before {
      background: url(<%= image_path('background.png') %>) no-repeat center center fixed; 
      content: "";
      background-size: stretch;
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      z-index: -2;
      opacity: 0.8;
    }
    .jumbotron {
      margin-top: 30%;
      background-color: rgba(233,236,239, 0.9);
    }
  </style>
<h2 class="text-center">Log in</h2>
<div class="row" style="margin-top: 5%;">
  <div class="col-md-6 offset-md-5">
    <%= image_tag "logo.svg", class: 'img-responsive' %>
  </div>

  <div class="col-md-6 offset-md-5">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group col-md-5">
      <label for="exampleInputEmail1">Email address</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter email" %>
    </div>


    <div class="form-group col-md-5">
      <label for="exampleInputPassword1">Password</label>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
    </div>

    <div class="form-check col-md-5">
      <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
      <%= f.submit "Sign In", class: "btn btn-primary text-center" %>
      <br>
      <%= render "devise/shared/links" %>
    </div>

 <% end %>
  </div>
</div>
